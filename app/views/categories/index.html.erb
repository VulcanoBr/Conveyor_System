<h1>Categoria(s)</h1>
<br>

<div>
    <%= link_to 'Cadastrar nova Categoria', new_category_path %>
</div>
<br>
<div>
    <% if @categories.any? %>
        <table>
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Categoria</th>
                    <th>  </th>
                    <th>  </th>
                        
                </tr>
            </thead>
            <tbody>
                <% @categories.each do |c| %>
                    <tr>
                        <td align="center"><%= c.id %>   </td>
                        <td> <%= c.name %> </td>
                        <td> <%= link_to 'Editar', edit_category_path(c.id) %> </td>
                        <td> <%= button_to 'Remover', category_path(c.id), method: :delete, class: 'btn btn-sm btn-danger'  %>  </td>
                        
                    </tr>
                <% end %>
            </tbody>
        </table>
    <% else %>
        <p> NÃ£o ha Categorias Cadastradas !!! </p>
    <% end %>
</div>
<br>
<div>
    <%= link_to 'Voltar', root_path %>
</div>