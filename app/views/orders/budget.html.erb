<h1>Orçamento da Ordem de Entrega => <%= @order.code %> </h1>
<br>

<div class="d-flex justify-content">
    <div class="me-4">
            <h5>Remetente</h5>
            <table class="table-responsive-md  table-bordered">
                <thead>
                    <tr>         
                        <th scope="col" > Nome </th>
                        <th scope="col"> CPF </th> 
                        <th scope="col" > Telefone </th>
                        <th scope="col" > Email </th>
                        <th scope="col"> Endereço </th>          
                    </tr>
                </thead>
                <tbody>
                        <tr >
                            <td> <%= @order.sender_name %> </td>
                            <td> <%= @order.sender_identification %> </td>
                            <td> <%= @order.sender_phone %> </td>
                            <td> <%= @order.sender_email %> </td>
                            <td> <%= @order.full_sender_address %> </td>
                        </tr>
                </tbody>
            </table>
    </div>
    <div></div>
    <div class="">
        
            <h5>Destinatario</h5>
            <table class="table-responsive-md table-bordered" >
                <thead>
                    <tr>         
                        <th scope="col" > Nome </th>
                        <th scope="col"> CPF </th> 
                        <th scope="col" > Telefone </th>
                        <th scope="col" > Email </th>
                        <th scope="col"> Endereço </th>          
                    </tr>
                </thead>
                <tbody>
                        <tr >
                            <td> <%= @order.recipient_name %> </td>
                            <td> <%= @order.recipient_identification %> </td>
                            <td> <%= @order.recipient_phone %> </td>
                            <td> <%= @order.recipient_email %> </td>
                            <td> <%= @order.full_recipient_address %> </td>
                        </tr>
                </tbody>
            </table>
        
    </div>
</div>
<br>
<div>
        
            <h5>Opções de Orçamento</h5>
            <table class="table-responsive-md table-bordered" >
                <thead>
                    <tr>     
                        <th scope="col" > Serviço </th>    
                        <th scope="col" > Peso </th>
                        <th scope="col"> Distancia </th> 
                        <th scope="col" > Estimativa da Entrega </th>
                        <th scope="col" > Taxa de Entrega </th>
                        <th scope="col" > Valor por Km </th>
                        <th scope="col"> Valor da Entrega </th> 
                        <th scope="col">  </th>          
                    </tr>
                </thead>
                <tbody>
                    <% @calc.each_with_index do |c, i| %>
                        <tr >
                            <td class="text-center"> <%= c.name %> </td>
                            <td class="text-center"> <%= @order.weight %> Kg</td>
                            <td class="text-center"> <%= @order.distance %> Km</td>
                            <td class="text-center"> <%= @des[i]['deadline_hours'] %> Hs</td>
                            <td class="text-center"> <%= number_to_currency(c.delivery_fee) %> </td>
                            <td class="text-center"> <%= number_to_currency(@res[i]['km_price']) %> </td>
                            <td class="text-center"> <%= number_to_currency((@res[i]['km_price'] * @order.distance) + c.delivery_fee)  %> </td>
                            <td id="servico" class="text-center"> <%= button_to 'Contratar Serviço', start_delivery_order_path(@order), class:"form-control btn btn-primary" %> </td>
                        </tr>
                    <% end %> 
                </tbody>
            </table>

    </div>

    <br>
    <div>
        <p> <%= link_to 'Voltar', orders_path %> </p>
    </div>